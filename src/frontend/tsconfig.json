{
  "extends": [
    "@tsconfig/node18/tsconfig.json",
    "@vue/tsconfig/tsconfig.json"
  ],
  "include": ["./env.d.ts", "src/**/*", "src/**/*.vue", "test/**/*", "test/**/*.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@test_utils": ["./test/utils.ts"]
    },
    "types": ["node"],
    "ignoreDeprecations": "5.0",
    "lib": ["ES2016", "DOM", "DOM.Iterable"]
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
